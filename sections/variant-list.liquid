

{% liquid
  assign max_items = section.settings.max_products
  assign featured_product = section.settings.product
%}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div
  data-testid="product-list"
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    section-resource-list
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  <div class="section-resource-list__header">
    {%- content_for 'block', type: '_product-list-content', id: 'static-header' -%}
  </div>

  {% capture list_items %}
    {% if featured_product != blank and featured_product.variants.size > 0 %}
      {% paginate featured_product.variants by max_items %}
        {% for variant in featured_product.variants limit: max_items %}
          {% liquid
            assign media = variant.image
            assign image_alt = media.alt
            assign price = variant.price
            assign pricePerItem =  variant.price
          %}
          <div
            class="resource-list__item"
          >
            <div class="featured-variant">
              <div class="featured-variant_image">
                {% render 'component__lazyload-image', image: media, widths: "480,600,720,900", alt: image_alt, sizes: "calc(50vw * 0.84), (min-width: 1023) 900px" %}
              </div>
              <div class="featured-variant_details">
                <h3>{{ variant.price | money }}</h3>
                <p>per bottle</p>
                <h3>{{ variant.price | money }}</h3>
              </div>
            </div>
          </div>

          {% unless forloop.last %}
            <!--@list/split-->
          {% endunless %}
        {% endfor %}
      {% endpaginate %}
    {% endif %}
  {% endcapture %}

  <div class="featured-variants">
    {{ list_items }}
  </div>

  {% liquid
    # Create an array from the list items to be used for different layout types
    assign list_items_array = list_items | strip | split: '<!--@list/split-->'
  %}

  <div
    class="section-resource-list__content"
    style="--horizontal-alignment: {{ section.settings.horizontal_alignment }};"
  >
    {%- content_for 'blocks' -%}
  </div>
</div>

